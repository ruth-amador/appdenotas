<%- include('partials/nav'); %>

<div style="margin: 20vh 0">
  <div class="container">
    <div class="row my-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body grad">
          <h1 class="text-center mb-3 text-light">
            <i class="fas fa-user-plus"></i> Registro
          </h1>
          <% include ./partials/messages %>
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="name">Nombre</label>
              <input
                type="name"
                id="name"
                name="name"
                class="form-control"
                placeholder="Ingresa Tu Nombre"
                value="<%= typeof name != 'undefined' ? name : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Ingresa Tu Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="password">Contrase単a</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Crea Tu Contrase単a"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
            <div class="form-group">
              <label for="password2">Confirma Tu Contrase単a</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirma Tu Contrase単a"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
            <button type="submit" class="btn btn-dark btn-block shadow">
              Registrarme
            </button>
          </form>
          <p class="lead mt-4 text-light">
            Tienes Cuenta? <a href="/users/login" class="text-dark">Ingresa</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

  <%- include('partials/footer'); %>
</div>
